<%= form_tag(@path_way, method: :get) do %>

	<% if !@wordSearched %>
		<% if jumbotron == true %>
					<%= text_field_tag :searched_word, nil,
						 :placeholder => "Search/type a word from Proverbs #{@numChap} to learn more!", 
						 :class => 'ysw-search-box search-box' %>

		<% elsif jumbotron == false %>
					<%= text_field_tag :searched_word, nil,
						 :placeholder => 'Search/type in a word!',	
						 :class => 'nsw-search-box search-box',
						 :onclick => "ClearText('#fc4a1a')"	%>
		<% end %>
	<% elsif @wordSearched %>
					<%= text_field_tag :searched_word, nil,
							 :placeholder => "Search/type in a word from Proverbs #{@numChap} to learn more!", 
							 :class => 'ysw-search-box search-box' %>
	<% end %>

	<%= hidden_field_tag 'chapNum', @numChap %>
	<% if !@wordSearched %>
		<%= submit_tag "Search", :class => "btn btn-xs btn-light btn-nsw" %>
	<% elsif @wordSearched %>
		<br><br>
		<%= submit_tag "Search #{params[:action].capitalize} #{@numChap}", :class => "btn btn-xs btn-light" %>
	<% end %>

<% end %>

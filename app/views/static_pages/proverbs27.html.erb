<% provide(:title, "27") %>

<h4>Search for a word to be highlighted:</h4>
<%= form_tag(static_pages_proverbs27_path, method: :get) do %>
	<%= text_field_tag :proverb %>
	<%= submit_tag 'Search' %>
<% end %>
<br><br>

<div class="row">

	<div class="col-sm">
		<p>
			<% @proverbs27.each do |prov| %>
				<% if !@params.nil? %>
					<% if prov.include? @params %>
						<%= prov.sub("#{@params}", "<b>#{@params}</b>").html_safe %><br>
					<% else %> 
						<%= prov %> <br>
					<% end %> 
				<% else %>
					<%= prov %> <br>
				<% end %> 
			<% end %>
		</p>
	</div>

	<div class="col-sm">
		<%= render partial: 'partials/html_mapping', locals: { chapter_num: @common } %><br><br>
	</div>

</div>
